{% extends "admin/base.html.twig" %}

{% block main %}
<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h4 class="c-grey-900 mT-10 mB-30">Articles</h4>
      <div class="row">
        <div class="col-md-12">
          <div class="bgc-white bd bdrs-3 p-20 mB-20">
            <div style="width: 100%; height: 51px">
              <h4 style="float: left" class="c-grey-900 mB-20">All Articles</h4>
              <a href="articles/new"><button style="float: right" type="button" class="btn cur-p btn-outline-primary">New Article</button></a>
            </div>
            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
                <tr>
                  <th>Author</th>
                  <th>Category</th>
                  <th>Title</th>
                  <th>Date</th>
                  <th>Featured</th>
                  <th>Published</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>Author</th>
                  <th>Category</th>
                  <th>Title</th>
                  <th>Date</th>
                  <th>Featured</th>
                  <th>Published</th>
                  <th>Actions</th>
                </tr>
              </tfoot>
              <tbody>
                {% for article in articles %}
                  <tr>
                    <td>{{ article.author.firstName }} {{ article.author.lastName }}</td>
                    <td>{{ article.category.name }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.date|date("d\.m\.Y G\:i") }}</td>
                    <td>{{ article.featured ? 'Yes' : 'No' }}</td>
                    <td>{{ article.published ? 'Yes' : 'No' }}</td>
                    <td>
                      <a href="articles/edit/{{ article.id }}"><button type="button" class="btn cur-p btn-outline-primary">Edit</button></a>
                      <a href="articles/delete/{{ article.id }}"><button type="button" class="btn cur-p btn-outline-danger">Delete</button></a>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock main %}
