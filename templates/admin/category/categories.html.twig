{% extends "admin/base.html.twig" %}

{% block main %}
    <main class="main-content bgc-grey-100">
        <div id="mainContent">
            <div class="container-fluid">
                <h4 class="c-grey-900 mT-10 mB-30">Categories</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <div style="width: 100%; height: 51px">
                                <h4 style="float: left" class="c-grey-900 mB-20">All Categories</h4>
                                <a href="categories/new"><button style="float: right" type="button" class="btn cur-p btn-outline-primary">New Category</button></a>
                            </div>
                            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Articles</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Articles</th>
                                    <th>Actions</th>
                                </tr>
                                </tfoot>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.name }}</td>
                                        <td>{{ category.getArticles()|length }}</td>
                                        <td>
                                            <a href="categories/edit/{{ category.id }}"><button type="button" class="btn cur-p btn-outline-primary">Edit</button></a>
                                            <a href="categories/delete/{{ category.id }}"><button type="button" class="btn cur-p btn-outline-danger">Delete</button></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock main %}
