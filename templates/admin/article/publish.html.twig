{% extends "admin/base.html.twig" %}

{% block main %}
    <main class="main-content bgc-grey-100">
        <div id="mainContent">
            <div class="container-fluid">
                <h4 class="c-grey-900 mT-10 mB-30">Articles</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                            <div style="width: 100%; height: 51px">
                                <h4 style="float: left" class="c-grey-900 mB-20">All Articles</h4>
                                <a href="/admin/articles/new"><button style="float: right" type="button" class="btn cur-p btn-outline-primary">New Article</button></a>
                            </div>
                            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th>Author</th>
                                    <th>Category</th>
                                    <th>Title</th>
                                    <th>Date</th>
                                    <th>Featured</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>Author</th>
                                    <th>Category</th>
                                    <th>Title</th>
                                    <th>Date</th>
                                    <th>Featured</th>
                                    <th>Actions</th>
                                </tr>
                                </tfoot>
                                <tbody>
                                {% for article in articles %}
                                    <tr>
                                        <td>{{ article.author.firstName }} {{ article.author.lastName }}</td>
                                        <td>{{ article.category.name }}</td>
                                        <td>{{ article.title }}</td>
                                        <td>{{ article.date|date("d\.m\.Y G\:i") }}</td>
                                        <td>{{ article.featured ? 'Yes' : 'No' }}</td>
                                        <td>
                                            <a href="/admin/articles/publish/{{ article.id }}"><button type="button" class="btn cur-p btn-outline-success">Publish</button></a>
                                            <button type="button" class="btn cur-p btn-outline-danger" data-toggle="modal" data-target="#delete{{ article.id }}">Delete</button>
                                            <div class="modal fade" id="delete{{ article.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" style="display: none;" aria-hidden="true"><div class="modal-dialog" role="document"><div class="modal-content"><div class="modal-header"><h5 class="modal-title" id="exampleModalLabel">Confirm you want to delete the article?</h5><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button></div><div class="modal-body">Once you delete it there is no way to get it back.</div><div class="modal-footer"><button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button><a href="/admin/articles/delete/{{ article.id }}"><button type="button" class="btn cur-p btn-outline-danger">Delete</button></a></div></div></div></div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock main %}
