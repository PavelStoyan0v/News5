    <section class="top-post-area pt-10">
      <div class="container no-padding">
        <div class="row small-gutters">
          <div class="col-lg-8 top-post-left">
            <div class="feature-image-thumb relative custom-image">
              <div class="overlay overlay-bg"></div>
                {% if articles[0].imageUrl == null %}
                  <div class="image-div" style="background-image:url(img/defaultnews0.jpg)">
                    <img style="visibility: hidden" class="img-fluid" src="img/defaultnews0.jpg">
                  </div>
                {% else %}
