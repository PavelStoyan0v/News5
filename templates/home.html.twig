            <div class="top-post-details">
              <ul class="tags">
                <li><a href="/category/{{ articles[0].category.id }}">{{ articles[0].category.name }}</a></li>
              </ul>
              <a href="/article/{{ articles[0].id }}">
                <h3>{{ articles[0].title }}</h3>
              </a>
              <ul class="meta">
                <li><a href="/author/{{ articles[0].author.id }}"><span class="lnr lnr-user"></span>{{ articles[0].author.firstName }} {{ articles[0].author.lastName }}</a></li>
                <li><span class="lnr lnr-calendar-full"></span>{{ articles[0].date|date("d M H:i") }}</li>
                <li><a href="/article/{{ articles[0].id }}#comments"><span class="lnr lnr-bubble"></span>{{ articles[0].comments|length }} {% if articles[0].comments|length == 1 %} Comment {% else %} Comments {% endif %}</a></li>
